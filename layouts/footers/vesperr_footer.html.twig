{% if content %}
<footer {{attributes.addClass('spaker_mod_footer')}}>
	<div class="container">
		<div class="row d-flex align-items-center">
			<div class="col-lg-6 text-lg-left text-center">
				{% if content.copyright %}
				<div {{ region_attributes.copyright.addClass('copyright')}}>
					{{ content.copyright }}
				</div>
				{% endif %}
			</div>
			<div class="col-lg-6">
				<nav class="footer-links text-lg-right text-center pt-2 pt-lg-0">
					{% if content.footer_links %}
						{% for item in content.footer_links|array_elements(region_attributes.footer_links.addClass('scrollto')) %}
							{{ item }}
						{% endfor %}
					{% endif %}
				</nav>
			</div>
		</div>
	</div>
</footer>
{% endif %}

